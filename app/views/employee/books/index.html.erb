<h1><%= t_models_local %></h1>

<%= link_to t('new'), new_employee_book_path %>

<table>
	<tr>
		<th><%= t_attr_local :title %></th>
		<th><%= t_attr_local :writer %></th>
		<th></th>
		<th></th>
		<th></th>
	</tr>

<% @books.each do |book| %>
	<tr>
		<td><%= book.title %></td>
		<td><%= book.writer %></td>
		<td><%= link_to t('show'), [:employee, book] %></td>
		<td><%= link_to t('edit'), edit_employee_book_path(book) %></td>
		<td><%= link_to t('destroy'), [:employee, book], :confirm => t('confirm'), :method => :delete %></td>
	</tr>
<% end %>
</table>

<br />

<%= paginate @books %>