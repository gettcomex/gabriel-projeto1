<h1>Listing loans</h1>

<%= link_to 'New', new_loan_path %>

<table>
  <tr>
    <th>Book</th>
    <th>User</th>
    <th>Starts at</th>
    <th>End at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @loans.each do |loan| %>
  <tr>
    <td><%= loan.book.title %></td>
    <td><%= loan.user.name %></td>
    <td><%= loan.starts_at %></td>
    <td><%= loan.end_at %></td>
    <td><%= link_to 'Show', loan %></td>
    <td><%= link_to 'Edit', edit_loan_path(loan) %></td>
    <td><%= link_to 'Destroy', loan, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
