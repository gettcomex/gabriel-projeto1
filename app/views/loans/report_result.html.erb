<table>
	<tr>
		<th><%= t_attr_local :book %></th>

		<% if current_user.is_employee %>
			<th><%= t_attr_local :user %></th>
		<% end %>
		
		<th><%= t_attr_local :starts_at %></th>
		<th><%= t_attr_local :end_at %></th>
		<th></th>
		<th></th>
		<th></th>
	</tr>

<% @loans.each do |loan| %>
	<tr>
		<td><%= loan.book.title %></td>

		<% if current_user.is_employee %>
			<td><%= loan.user.name %></td>
		<% end %>

		<td><%= l loan.starts_at %></td>
		<td><%= l loan.end_at %></td>
	</tr>
<% end %>
</table>