<%= form_for(@user) do |f| %>

	<%= error_messages_for(@user) %>

	<div class="field">
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :login %><br />
		<%= f.text_field :login %>
	</div>
	<div class="field">
		<%= f.label :password %><br />
		<%= f.password_field :password %>
	</div>
	<div class="field">
		<%= f.label :password_confirmation %><br />
		<%= f.password_field :password_confirmation %>
	</div>
	<div class="field">
		<%= f.label :email %><br />
		<%= f.text_field :email %>
	</div>

	<% if current_user.is_employee %>
		<div class="field">
			<%= f.label :is_employee %><br />
			<%= f.check_box :is_employee %>
		</div>
	<% end %>
	
	<div class="actions">
		<%= f.submit %>
	</div>

<% end %>
