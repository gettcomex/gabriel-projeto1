<%= form_for(@user) do |f| %>

	<%= error_messages_for(@user) %>

	<div class="field">
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :login %><br />
		<%= f.text_field :login %>
	</div>
	<div class="field">
		<%= f.label :password %><br />
		<%= f.text_field :password %>
	</div>
	<div class="field">
		<%= f.label :email %><br />
		<%= f.text_field :email %>
	</div>
	<div class="field">
		<%= f.label :is_employee %><br />
		<%= f.check_box :is_employee %>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>

<% end %>
