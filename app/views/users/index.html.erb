<h1><%= t_models_local %></h1>

<%= link_to t('new'), new_user_path %>

<table>
	<tr>
		<th><%= t_attr_local :name %></th>
		<th><%= t_attr_local :login %></th>
		<th><%= t_attr_local :email %></th>
		<th></th>
		<th></th>
		<th></th>
	</tr>

<% @users.each do |user| %>
	<tr>
		<td><%= user.name %></td>
		<td><%= user.login %></td>
		<td><%= user.email %></td>
		<td><%= link_to t('show'), user %></td>
		<td><%= link_to t('edit'), edit_user_path(user) %></td>
		<td><%= link_to t('destroy'), user, :confirm => t('confirm'), :method => :delete %></td>
	</tr>
<% end %>
</table>

<br />

<%= paginate @users %>